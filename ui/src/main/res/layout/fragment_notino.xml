<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="cz.koubicl.notino.presentation.viewmodel.NotinoViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_layout" />

        <View
            android:id="@+id/toolbar_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/notino_products_refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:refreshing="@{vm.isLoading}"
            app:onRefreshListener="@{() -> vm.fetchProducts()}"
            app:layout_constraintTop_toBottomOf="@id/toolbar_divider">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/notino_products_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:overScrollMode="never"
                app:visible="@{!vm.isLoading}"
                tools:listitem="@layout/item_product" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </LinearLayout>
</layout>